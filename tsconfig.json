{
  "compilerOptions": {
    "baseUrl": "./packages",
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "target": "ES2019",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "lib": ["ES2019", "ES2020"]
    "sourceMap": true
  }
}
